@model BooksLibrary.Models.Knowledge

@{
    ViewBag.Title = "Edit";
}

<h2>Редактировать область знаний</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal table">
        <a href="/Knowledges/Index" class="btn-icon-details" title="Вернуться на главную"><i class="fa fa-arrow-left fa-2x"></i></a>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.knowledge1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.knowledge1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.knowledge1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить область знаний" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
